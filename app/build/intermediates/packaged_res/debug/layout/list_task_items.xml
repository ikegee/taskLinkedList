<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="4dp">

    <CheckBox
        android:id="@+id/task_list_item_taskCheckBox"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center"
        android:padding="4dp"
        android:paddingEnd="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"/>

    <TextView
        android:id="@+id/task_list_item_titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/task_title_label"
        android:textStyle="bold"
        android:layout_toStartOf="@id/task_list_item_taskCheckBox" />

    <TextView
        android:id="@+id/task_list_item_descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_below="@id/task_list_item_titleTextView"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/task_description_label"
        android:textStyle="bold"
        android:layout_toStartOf="@id/task_list_item_taskCheckBox" />

    <TextView
        android:id="@+id/task_list_item_dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_list_item_descriptionTextView"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:text="@string/task_due_date"
        android:layout_toStartOf="@id/task_list_item_taskCheckBox" />

    <TextView
        android:id="@+id/task_list_item_categoryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_list_item_dateTextView"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:text="@string/task_category"
        android:layout_toStartOf="@id/task_list_item_taskCheckBox" />

    <TextView
        android:id="@+id/task_list_item_priorityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_list_item_categoryTextView"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:text="@string/task_priority"
        android:layout_toStartOf="@id/task_list_item_taskCheckBox" />

    <ImageView
        android:id="@+id/task_list_item_iconView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/task_list_item_categoryTextView"

        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:layout_toEndOf="@id/task_list_item_priorityTextView"
        android:contentDescription="@string/task_priority" />
</RelativeLayout>

